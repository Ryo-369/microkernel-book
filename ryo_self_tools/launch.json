{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug HinaOS",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/hinaos.elf.gdb",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "serverLaunchTimeout": 5000,
            "miDebuggerPath": "gdb-multiarch",
            "miDebuggerServerAddress": "localhost:7777"
        }
    ]
}
